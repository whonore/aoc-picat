import util.
include "../aoc.pi".

eval(Problem) = Sol =>
    once append(Vals, [[Op]], Problem),
    Vals := [to_number(Val): Val in Vals],
    Sol = reduce(Op, Vals).

run(File) = Total =>
    Worksheet = [split(Line, " "): Line in read_file_lines(File)],
    Problems = columns(Worksheet),
    Sols = [eval(Problem): Problem in Problems],
    Total = sum(Sols).

test_expected = 4277556.
